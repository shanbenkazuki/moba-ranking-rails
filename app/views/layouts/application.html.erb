<!DOCTYPE html>
<html>
  <head>
    <title>Moba Ranking</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
    <%= display_meta_tags(default_meta_tags) %>
  </head>

  <body>
    <div class="drawer drawer-end">
      <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content flex flex-col">
        <!-- Navbar -->
        <div class="w-full navbar bg-base-300">
          <div class="flex-1 px-2 mx-2">
            <%= link_to root_path do %>
              <%= image_tag "header-logo.png", class: "h-12 w-auto" %>
            <% end %>
          </div>
          <div class="flex-none hidden lg:block">
            <ul class="menu menu-horizontal">
              <!-- Navbar menu content here -->
              <li>
                <%= link_to 'MLBB Tier', heroes_path, class: "text-white hover:text-primary" %>
              </li>
              <li>
                <%= link_to 'Unite Tier', pokemons_path, class: "text-white hover:text-primary" %>
              </li>
            </ul>
          </div>
          <div class="flex-none lg:hidden">
            <label for="my-drawer-3" aria-label="open sidebar" class="btn btn-square btn-ghost">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
            </label>
          </div> 
        </div>
        <!-- Page content here -->
        <%= yield %>
      </div> 
      <div class="drawer-side">
        <label for="my-drawer-3" aria-label="close sidebar" class="drawer-overlay"></label>
        <ul class="menu p-4 w-80 min-h-full bg-base-200 relative z-20">
          <!-- Sidebar content here -->
          <li>
            <%= link_to 'MLBB Tier', heroes_path, class: "text-white hover:text-primary" %>
          </li>
          <li>
            <%= link_to 'Unite Tier', pokemons_path, class: "text-white hover:text-primary" %>
          </li>
        </ul>
      </div>
    </div>
  </body>
</html>
