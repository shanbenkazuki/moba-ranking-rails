<div class="container mx-auto">
  <div class="relative">
    <div class="relative py-8">
      <h1 class="text-4xl md:text-5xl font-bold text-white text-center mb-4">
        <span class="text-shadow">ヒーロー</span>
        <span class="text-shadow text-yellow-400">Tier</span>
      </h1>
      <p class="text-lg md:text-xl text-white text-center">
        更新日: <span class="inline-block text-white px-2 py-1"><%= @latest_fetched_date %></span>
      </p>
    </div>
  </div>

  <div class="mb-8">
    <%= search_form_for @q, url: heroes_path, id: 'role_filter_form', class: 'flex flex-wrap justify-center' do |f| %>
      <% @roles.each do |role| %>
        <label class="flex items-center mr-6 mb-4">
          <%= f.radio_button :role_eq, role, onchange: 'document.getElementById("role_filter_form").submit();', checked: (params[:q] && params[:q][:role_eq] == role), class: 'form-radio h-5 w-5 text-blue-500' %>
          <span class="ml-2 text-white">
            <% case role %>
              <% when 'Fighter' %>
                ファイター
              <% when 'Tank' %>
                タンク
              <% when 'Assassin' %>
                アサシン
              <% when 'Mage' %>
                メイジ
              <% when 'Marksman' %>
                ハンター
              <% when 'Support' %>
                サポート
              <% else %>
                <%= role.titleize %>
            <% end %>
          </span>
        </label>
      <% end %>

      <label class="flex items-center mb-4">
        <%= f.radio_button :role_eq, '', onchange: 'document.getElementById("role_filter_form").submit();', checked: (params[:q].blank? || params[:q][:role_eq].blank?), class: 'form-radio h-5 w-5 text-blue-500' %>
        <span class="ml-2 text-white">すべてのロール</span>
      </label>
    <% end %>
  </div>


  <div class="flex flex-col space-y-8">
    <% tier_colors = {
      'S+' => 'bg-gradient-to-r from-pink-500 to-red-500',
      'S' => 'bg-gradient-to-r from-purple-500 to-indigo-500',
      'A+' => 'bg-gradient-to-r from-blue-500 to-green-500',
      'A' => 'bg-gradient-to-r from-green-500 to-yellow-500',
      'B' => 'bg-gradient-to-r from-yellow-500 to-orange-500',
      'C' => 'bg-gradient-to-r from-gray-600 to-gray-800'
    } %>

    <% %w[S+ S A+ A B C].each do |tier| %>
      <div class="flex items-center <%= tier_colors[tier] %> rounded-lg">
        <div class="w-12 flex-shrink-0 flex items-center justify-center p-4">
          <h2 class="text-white text-2xl font-bold"><%= tier %></h2>
        </div>
        <div class="flex-grow border-l-2 border-white pl-4 py-4">
          <div class="flex flex-wrap -mx-2">
            <% @heroes.select { |hero| hero.tier == tier }.each do |hero| %>
              <div class="w-20 px-2 mb-4">
                <div class="shadow-md overflow-hidden">
                  <%= image_tag hero.tier_img_url, alt: hero.name_en, class: 'w-full h-auto' %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>